<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="text-center background-beige">
        <h1>Booking recapitulation</h1>
        <% if current_user == @booking.user %>
          <h2>You booked a session with <%= @booking.skill.user.first_name %>!</h2>
        <% else %>
          <h2><%= @booking.user.first_name %> booked a session with you!</h2>
        <% end  %>
        <h2>Start date:<%= @booking.start_date %></h2>
        <h2>End date:<%= @booking.start_date %></h2>
        <h2>Booking status: <%= @booking.status %></h2>
      </div>
    </div>
  </div>
</div>
