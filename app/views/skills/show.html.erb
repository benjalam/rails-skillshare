<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="text-center">
        <h1><%= @skill.title %></h1>
        <h2><%= @skill.city %></h2>
        <p>@skill.description</p>
        <% @skill.reviews.each do |review| %>
          <p><%= review.title %></p>
          <p><%= review.description %></p>
        <% end %>
        <%= cl_image_tag @skill.photo, height: 300, width: 400, crop: :fill %>
        <p class="padded"><%= link_to "Back", skills_path, class:"link" %></p>
      </div>
    </div>
  </div>
</div>
