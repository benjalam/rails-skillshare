<div class="full-page">

  <div class="layout-form">

    <div class="container">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            <div class="skill-form padded-form">
            <h2 class="text-center">Add a new skill</h2>
            <%= simple_form_for [@skill] do |f| %>
              <%= f.error_notification %>
              <%= f.input :city %>
              <%= f.input :title %>
              <%= f.input :description %>
              <%= f.input :price, :label => 'Daily price in euros'  %>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
              <%= f.submit "Add a skill", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
